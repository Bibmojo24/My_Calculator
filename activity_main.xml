<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="#2E2E2E">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_screenE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="0"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_screenR"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="0"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
            android:weightSum="4"
        android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_pls"
                android:text="+"
                android:textSize="25sp"
                android:background="@color/black"
                android:textColor="@color/blue"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_mns"
                android:text="-"
                android:textSize="25sp"
                android:background="@color/black"
                android:textColor="@color/blue"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_mult"
                android:text="*"
                android:textSize="25sp"
                android:background="@color/black"
                android:textColor="@color/blue"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_dot"
                android:text="."
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_equal"
                android:text="="
                android:textSize="25sp"
                android:background="@color/black"
                android:textColor="@color/green"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_div"
                android:text="/"
                android:textSize="25sp"
                android:background="@color/black"
                android:textColor="@color/blue"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_pl"
                android:text="("
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_pr"
                android:text=")"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/btn_del"
                android:text="DEL"
                android:textSize="20sp"
                android:background="@color/black"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btn_clr"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="CLR"
                android:textColor="@color/red"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>

